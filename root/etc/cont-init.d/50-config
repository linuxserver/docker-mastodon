#!/usr/bin/with-contenv bash
# shellcheck shell=bash

mkdir -p \
    /app/www/tmp \
    /app/www/public/system
    /config/mastodon

chown -R abc:abc \
    /app/www/tmp \
    /app/www/public/system

ln -s /config/mastodon /mastodon

cd /app/www/ || exit 1

s6-setuidgid abc /usr/bin/bundle exec rails db:prepare

chown -R abc:abc \
    /config
